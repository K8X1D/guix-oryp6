#!/bin/sh
nix-channel --add https://nixos.org/channels/nixpkgs-unstable
nix-channel --update
nix-env -iA \
	nixpkgs.zotero \
	nixpkgs.protonmail-bridge \
	nixpkgs.system76-keyboard-configurator \
	nixpkgs.mattermost-desktop \
	nixpkgs.caprine \
	nixpkgs.discord \
	nixpkgs.vscodium \
	nixpkgs.calibre \
	nixpkgs.neovim \
	nixpkgs.texlab \
	nixpkgs.tree-sitter \
	nixpkgs.zathura

ln -s /nix/var/nix/profiles/per-user/k8x1d/profile ~/.nix-profile
